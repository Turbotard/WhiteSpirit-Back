# Configuration du port série
SERIAL_PORT=/dev/tty.usbserial-0001
SERIAL_BAUDRATE=9600

# Configuration MQTT
MQTT_BROKER_URL=mqtt://test.mosquitto.org
MQTT_CLIENT_ID=zigbee_central_${HOSTNAME}

# Configuration des topics MQTT
MQTT_TOPIC_SENSOR_DATA=zigbee/sensor/data
MQTT_TOPIC_SENSOR_STATUS=zigbee/sensor/status
MQTT_TOPIC_SENSOR_COMMAND=zigbee/sensor/command
MQTT_TOPIC_MODULE_CONTROL=zigbee/module/control
MQTT_TOPIC_MODULE_STATUS=zigbee/module/status

# Configuration des modules XBee
XBEE_API_MODE=2
XBEE_BROADCAST_ADDRESS=FFFFFFFFFFFFFFFF

# Configuration des capteurs (à adapter selon vos besoins)
SENSOR_TEMPERATURE_ID=0013A20041B4A2B1
SENSOR_HUMIDITY_ID=0013A20041B4A2B2
SENSOR_PRESSURE_ID=0013A20041B4A3B3
