# Serial port configuration
SERIAL_PORT=/dev/ttyUSB0  # Modify this according to your system
SERIAL_BAUDRATE=9600

# MQTT Configuration
MQTT_BROKER_URL=mqtt://test.mosquitto.org
MQTT_CLIENT_ID=zigbee-node-central-client

# MQTT Topics
MQTT_TOPIC_SENSOR_DATA=restaurant/sensors/data
MQTT_TOPIC_SENSOR_STATUS=restaurant/sensors/status
MQTT_TOPIC_SENSOR_COMMAND=restaurant/sensors/command
MQTT_TOPIC_MODULE_CONTROL=restaurant/modules/control
MQTT_TOPIC_MODULE_STATUS=restaurant/modules/status

# XBee Configuration
XBEE_API_MODE=2
XBEE_BROADCAST_ADDRESS=FFFFFFFFFFFFFFFF

# Sensor IDs
SENSOR_TEMPERATURE_ID=temp1
SENSOR_HUMIDITY_ID=hum1
SENSOR_PRESSURE_ID=press1
